{
  "name": "nouns.zone",
  "description": "Farcaster client for Nouns",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "check:lint": "next lint",
    "fix:lint": "next lint --fix",
    "check:format": "prettier --check --cache .",
    "fix:format": "prettier --write --cache .",
    "check:styles": "stylelint --cache ./**/*.css",
    "fix:styles": "stylelint --fix --cache ./**/*.css",
    "check:types": "tsc",
    "prepare": "husky install"
  },
  "dependencies": {
    "@alex-grover/styles": "^0.0.1",
    "next": "14.0.0",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@alex-grover/eslint-config": "^0.0.5",
    "@alex-grover/prettier-config": "0.0.2",
    "@alex-grover/stylelint-config": "^0.0.1",
    "@csstools/postcss-global-data": "^2.1.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-next": "14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-css-modules": "^2.12.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.2",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^9.2.0",
    "prettier": "3.0.3",
    "stylelint": "^15.11.0",
    "stylelint-config-css-modules": "^4.3.0",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-standard": "^34.0.0",
    "typescript": "^5"
  },
  "postcss": {
    "plugins": [
      [
        "@csstools/postcss-global-data",
        {
          "files": [
            "node_modules/@alex-grover/styles/media.css"
          ]
        }
      ],
      "postcss-flexbugs-fixes",
      [
        "postcss-preset-env",
        {
          "autoprefixer": {
            "flexbox": "no-2009"
          },
          "stage": 3,
          "features": {
            "custom-media-queries": true,
            "custom-properties": false
          }
        }
      ]
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.!(js|jsx|ts|tsx|css)": "prettier --write --ignore-unknown"
  },
  "eslintConfig": {
    "extends": [
      "@alex-grover",
      "next/core-web-vitals"
    ]
  },
  "prettier": "@alex-grover/prettier-config",
  "stylelint": {
    "extends": "@alex-grover/stylelint-config"
  }
}
