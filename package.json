{
  "name": "nouns.zone",
  "description": "All things Nouns on Farcaster",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "check:lint": "next lint",
    "fix:lint": "next lint --fix",
    "check:format": "prettier --check --cache .",
    "fix:format": "prettier --write --cache .",
    "check:styles": "stylelint --cache ./**/*.css",
    "fix:styles": "stylelint --fix --cache ./**/*.css",
    "check:types": "tsc",
    "migrate": "tsx lib/db/migrate.ts",
    "generate": "kysely-codegen --dialect postgres --out-file lib/db/generated/db.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@alex-grover/styles": "^0.0.1",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-popover": "^1.0.7",
    "@t3-oss/env-nextjs": "^0.7.1",
    "@vercel/analytics": "^1.1.1",
    "connectkit": "^1.5.3",
    "dayjs": "^1.11.10",
    "geist": "^1.0.0",
    "iron-session": "^6.3.1",
    "kysely": "^0.26.3",
    "lucide-react": "^0.290.0",
    "next": "14.0.1",
    "next-themes": "1.0.0-beta.0",
    "neynar-next": "^0.3.1",
    "pg": "^8.11.3",
    "react": "^18",
    "react-dom": "^18",
    "react-qr-code": "^2.0.12",
    "siwe": "^2.1.4",
    "sonner": "^1.2.0",
    "swr": "^2.2.4",
    "viem": "^1.18.0",
    "wagmi": "^1.4.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@alex-grover/eslint-config": "^0.0.5",
    "@alex-grover/prettier-config": "0.0.2",
    "@alex-grover/stylelint-config": "^0.0.1",
    "@csstools/postcss-global-data": "^2.1.0",
    "@types/node": "^20",
    "@types/pg": "^8.10.7",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.52.0",
    "eslint-config-next": "14.0.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-css-modules": "^2.12.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.0",
    "kysely-codegen": "^0.11.0",
    "lint-staged": "^15.0.2",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^9.2.0",
    "prettier": "3.0.3",
    "stylelint": "^15.11.0",
    "stylelint-config-css-modules": "^4.3.0",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-standard": "^34.0.0",
    "tsx": "^3.14.0",
    "typescript": "^5",
    "vercel": "^32.5.0"
  },
  "postcss": {
    "plugins": [
      [
        "@csstools/postcss-global-data",
        {
          "files": [
            "node_modules/@alex-grover/styles/media.css"
          ]
        }
      ],
      "postcss-flexbugs-fixes",
      [
        "postcss-preset-env",
        {
          "autoprefixer": {
            "flexbox": "no-2009"
          },
          "stage": 3,
          "features": {
            "custom-media-queries": true,
            "custom-properties": false
          }
        }
      ]
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.!(js|jsx|ts|tsx|css)": "prettier --write --ignore-unknown"
  },
  "eslintConfig": {
    "extends": [
      "@alex-grover",
      "next/core-web-vitals"
    ],
    "ignorePatterns": [
      "lib/db/generated/*"
    ]
  },
  "prettier": "@alex-grover/prettier-config",
  "stylelint": {
    "extends": "@alex-grover/stylelint-config"
  }
}
